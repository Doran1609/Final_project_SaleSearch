<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table class="center table table-hover">
  <thead>
      
    <tr Align="center">
      
      <th>Title</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>User</th>
      <th></th>
      <th>Actions</th>
      <th></th>
      
    </tr>
        
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        
  
        <td><%= profile.title %></td>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.address %></td>
        <td><%= profile.zipcode %></td>
        <td><%= profile.city %></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  
    <% end %>
  </tbody>
</table>

<br>

